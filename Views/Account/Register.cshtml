@model fırst_WebProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<div style="padding: 50px 500px">
    <br />
    <h4 style="text-align:center;padding-right:6px">Create a new account</h4>
    <br />
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div  style="padding-left:90px" class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div  style="padding-left:90px" class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div  style="padding-left:90px" class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-6 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div style="padding-left:228px" class="col-md-offset-2 col-md-10">
            <br/>
            <input style="background-color:#333;color:#ffffff" type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
    </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
