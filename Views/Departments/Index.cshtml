
@model IEnumerable<fırst_WebProject.Models.Department>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    

    <section class="page-section portfolio" id="portfolio">
        <div class="container">

            <!-- Portfolio Section Heading-->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Departments</h2>
            <!-- Icon Divider-->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <h4>
                @Html.ActionLink("Add a department", "Create")
            </h4>
            <!-- Portfolio Grid Items-->
            <div class="row justify-content-center">
                <!-- Portfolio Item 1-->

                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-5">
                        <a href="/Students/index/@item.Department_Id">
                            <div class="portfolio-item mx-auto" data-toggle="modal">
                                <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                                    <div class="portfolio-item-caption-content text-center text-white"> </div>
                                </div>
                                <img class="img-fluid" style="height:250px;width:100%" src="/@item.Phot" alt="" />
                            </div>
                        </a>
                        <div style="text-align:center">
                            <br />

                            <h4>@item.Department_IdName</h4>
                            <br />
                            <p>@item.Description</p> 
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Department_Id })
                                @Html.ActionLink("Details", "Details", new { id = item.Department_Id })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Department_Id })
                             </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



</div>






